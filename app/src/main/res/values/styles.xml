<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="SelectPublisherTheme" parent="AppTheme">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/slide</item>
        <item name="android:windowExitTransition">@transition/slide</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <!--SplashScreen Theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Settings application theme with ActionBar. -->
    <style name="SettingsTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="ChipView">
        <item name="android:background">@drawable/chip_shape</item>
        <item name="android:backgroundTint">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <style name="ListItemText">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="ListItemSecondaryText">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">@dimen/list_item_secondary_text_size</item>
    </style>

    <style name="ListItemLabelSmall">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">@dimen/list_item_label_small_text_size</item>
    </style>

    <style name="MessageText">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">@dimen/message_text_size</item>
    </style>

    <style name="TextAppearance.Tiny" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Tiny.Black" parent="@style/TextAppearance.Tiny">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RadioGroup
        android:id="@+id/sort_by_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:checkedButton="@id/oldest_first_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/oldest_first_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_oldest_first"/>

        <RadioButton
            android:id="@+id/newest_first_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_newest_first"/>

        <RadioButton
            android:id="@+id/name_ascending_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_name_ascending"/>

        <RadioButton
            android:id="@+id/name_descending_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_name_descending"/>

        <RadioButton
            android:id="@+id/mac_address_ascending_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_ascending"/>

        <RadioButton
            android:id="@+id/mac_address_descending_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mac_address_descending"/>

    </RadioGroup>





</androidx.constraintlayout.widget.ConstraintLayout>
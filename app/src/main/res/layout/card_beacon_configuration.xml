<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/beacon_settings"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.circularreveal.CircularRevealGridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch_connectible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="@string/connectible" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cv_button_update_firmware"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="@string/update_firmware" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cv_button_reset_factory"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                android:layout_rowWeight="1"
                android:textAllCaps="false"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="@string/reset_factory" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cv_button_power_off"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:textAllCaps="false"
                android:background="?attr/selectableItemBackground"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="@string/power_off" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cv_button_add_password"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAllCaps="false"
                android:background="?attr/selectableItemBackground"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="@string/add_password" />
        </com.google.android.material.circularreveal.CircularRevealGridLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:defaultValue="0"
        android:key="publishers"
        android:title="@string/title_publish_list" />

    <Preference
        android:defaultValue="0"
        android:key="virtual_scanning_sources"
        android:title="@string/virtual_scanning_sources" />

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/SettingsScanMode"
        android:entryValues="@array/SettingsScanModeValues"
        android:key="scan_mode"
        android:title="Scan Mode" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="keep_screen_on"
        android:title="@string/keep_screen_on" />

</PreferenceScreen>